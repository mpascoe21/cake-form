{#      </table>#}
{#    </section>#}

    <section class="pie-chart">
      cake pie chart
    </section>

    <section class="test">
      <div class="test-slider" data-slick='{"slidesToShow": 2, "slidesToScroll": 2}'>
        <div class="test-slide"><h3>1</h3></div>
        <div class="test-slide"><h3>2</h3></div>
        <div class="test-slide"><h3>3</h3></div>
        <div class="test-slide"><h3>4</h3></div>
        <div class="test-slide"><h3>5</h3></div>
        <div class="test-slide"><h3>6</h3></div>
      </div>
    </section>


  </main>
{% endblock %}

{% block scripts %}
  <script type="text/javascript" src="js/app.min.js"></script>
  <script type="text/javascript" src="/js/flot/jquery.flot.js"></script>
  <script type="text/javascript" src="/js/flot/jquery.flot.pie.js"></script>
  <link type="text/css" rel="stylesheet" href="{{ stylesheet }}">
{% endblock %}
